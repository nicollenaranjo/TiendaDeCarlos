@model TiendaDeCarlos.Models.CampesinoModel

@{
    TempData["Id"] = @Model.Id;
}

<!DOCTYPE html>
    <head>
        <meta name="viewport">
        <link rel="stylesheet" href="~/css/CampesinoStyle.css" >
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Castoro&display=swap" rel="stylesheet">
    </head>
    <body>
        <div class="Main">
            <div class="header">
                <img src="~/Pictures/cs_preview_rev_1.png"   
                    class="rounded-circle"   
                    height="120" width="120"   
                    asp-append-version="true" />  
                <h1>Bienvenide @Model.Nombre</h1>
                <!--<input type="text" placeholder="Busca Tu Producto">-->
                <div class="demo">
                    <form class="form-search" > 
                        <div class="input-group">
                            <input class="form-control form-text" maxlength="100" placeholder="Buscar producto" size="9" type="text"/>
                            <input class="botons" type="submit" value="Buscar" >
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="MainWrapper">
                <h2>MIS PRODUCTOS</h2>
                @if( (Model.ProductoVendedor).Count > 0 )
                {
                    <table>
                    <thead>
                        <tr>
                            <th>Producto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var producto in Model.ProductoVendedor)
                        {
                            <tr>
                                <td><div class="imagen">
                                    <img src="~/Pictures/@producto.Imagen"   
                                    class="rounded-circle"   
                                    height="100" width="100"   
                                    asp-append-version="true" />  </td>
                                <td>@Html.DisplayFor(modelItem => producto.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => producto.Cantidad)</td>
                                <td>
                                    <form asp-controller="Campesino" asp-action="CasiEditarProducto">
                                    <button class="botons" name="@producto.Id" type="submit">Editar</button>
                                    </form>
                                </td>
                                <td>
                                    <form asp-controller="Campesino" asp-action="CasiEliminarProducto">
                                    <button class="botons" type="submit">Eliminar</button>
                                    </form>
                                </td>
                            </tr>    
                        }
                    </tbody>
                    </table> 
                }
                else
                {
                    <label for="">No ha comenzado a vender productos</label>
                }
                <form asp-controller="Campesino" asp-action="CasiAgregarProducto">
                    <button type="submit">Agregar producto</button>            
                </form>
            </div>
        </div>
    </body>    
</html>