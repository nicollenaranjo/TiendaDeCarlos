@model TiendaDeCarlos.Models.ProductoModel


<!DOCTYPE html>
    <head>
        <meta name="viewport">
        <link rel="stylesheet" >
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Castoro&display=swap" rel="stylesheet">
    </head>
    <body>
        <section>
            <div class="NewUser">
                <form asp-controller="Producto" asp-action="EditarProducto"  method="POST">
                    <div>
                        <input class="controls" asp-for="@Model.Nombre" name="nombre" placeholder="@Model.Nombre" required>
                    </div>
                    <div>
                        <label asp-for="Imagen" class="control-label">
                            <input type="file" asp-for="Imagen" class="custom-file-input" >  
                        </label>  
                    </div>  
                    <div>
                        <p>Cantidad de producto que desea agregar:
                            <select id="testSelect" name="testSelect" asp-for="Cantidad">
                                <option value="10">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="40">40</option>
                            </select>
                            <asp:Button ID="btnTest" runat="server" Text="Test it!" onclick="btnTest_Click" />
                        </p>
                    </div>
                    <div>
                        <input class="botons" type="submit" value="Confirmar ediciÃ³n">
                    </div>   
                </form>
             </div>
        </section>
        @section scripts{  
                <script type="text/javascript">  
                    // Add the following code if you want the name of the file appear on select  
                    $(".custom-file-input").on("change", function () {  
                        var fileName = $(this).val().split("\\").pop();  
                        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);  
                    });  
                </script>  
            }  
    </body>    
</html>