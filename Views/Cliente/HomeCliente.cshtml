@model TiendaDeCarlos.Models.ClienteModel

@{
    TempData["Id"] = @Model.Id;
}

<!DOCTYPE html>
    <head>
        <meta name="viewport">
        <link rel="stylesheet" href="~/css/ClienteStyle.css" >
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Castoro&display=swap" rel="stylesheet">
    </head>
    <body>
        <div class="header">
            <img src="~/Pictures/cs_preview_rev_1.png"   
                    class="rounded-circle"   
                    height="120" width="120"   
                    asp-append-version="true" />  
            <h1>Bienvenide @Model.Nombre</h1>
        </div>
        <div class="Main">
        </div>
        <div class="MainWrapper">
            <form>
                <div>
                    <p class="words">Ingrese el producto que desea</p>
                    <label>
                        <!--Aqui va la seleccion del producto-->
                    </label>
                </div>
                <div>
                    <input class="botons" type="submit" value="Agregar producto a la canasta">
                </div>
                <div class = "boton" asp-controller="Cliente" asp-action="CarritoCliente">
                    <input class="boton" type="submit" value="Carrito">
                    <img src="~/Pictures/carritoi.jpg"   
                    class="rounded-circle"   
                    height="50" width="50"   
                    asp-append-version="true" />
                </div>
            </form>
        </div>
    </body>    
</html>
