@model TiendaDeCarlos.Models.ProductoModel


<!DOCTYPE html>
    <head>
        <meta name="viewport">
        <link rel="stylesheet" href="~/css/AgregarStyle.css">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Castoro&display=swap" rel="stylesheet">
    </head>
    <body>
        <section>
            <div class="NewUser">
                <form asp-controller="Producto" asp-action="EditarProducto" method="POST" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id">
                    <div>
                        <input type="hidden" asp-for="IdVendedor">
                    </div>
                    <div>
                        <label asp-for="Nombre"></label>
                        <input asp-for="Nombre"/>
                    </div>
                    <div>
                        <input class="controls" asp-for="Precio" name="precio" placeholder="Precio" required>
                    </div>
                    <div>
                        <input type="hidden" asp-for="Imagen">
                    </div>
                    <div>
                        <p>Cantidad de producto que desea:
                            <select id="edit" name="edit" asp-for="Cantidad">
                                <option value="10">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="40">40</option>
                            </select>
                            <asp:Button ID="btnEdit" runat="server" Text="Test it!" onclick="btnEdit_Click" />
                        </p>
                    </div>
                    <div>
                        <input class="botons" type="submit" value="Confirmar ediciÃ³n">
                    </div>   
                </form>
             </div>
        </section>
        @section scripts{  
                <script type="text/javascript">  
                    // Add the following code if you want the name of the file appear on select  
                    $(".custom-file-input").on("change", function () {  
                        var fileName = $(this).val().split("\\").pop();  
                        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);  
                    });  
                </script>  
            }  
    </body>    
</html>